
@{
    ViewBag.Title = "Persons";
}

<h2>Persons</h2>

@{
    string[] names = new string[3] { "Baran", "Emre", "Türkmen" };
    int index = 0;

    <ul>
        @foreach (string name in names)
        {
            <li>
                @if (index % 2 == 0)
                {
                    <b>
                        @name
                    </b>
                }
                else
                {
                    @name
                    <!-- if başına at koyunca else koymana gerek yok.-->
                }

            </li>
            index++;
        }
    </ul>
}

@for (int i = 0; i < 10; i++)
{
    @("Sayı : "+i.ToString())<br />
}

